<%= form_for [@product, @review] do |f| %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :rating %>
    <%= f.select :rating, [1, 2, 3, 4, 5] %>
  </div>
  <%= f.submit 'Post Review', class: 'btn btn-primary' %>
<% end %>
